.page-header 
  width 100%
  background-image url(../img/header-background.jpg)
  background-repeat no-repeat
  background-size 100%
  background-color #8c5f0c
  .container
    width 1160px
    max-width 100%
    margin 0 auto
    .main-header-navigation
      display flex
      justify-content center 
      padding-top 60px
      .main-nav
        display flex
        justify-content space-between
        margin-left 50px
        list-style none 
        text-transform uppercase
        li
          margin-right 70px
          a
            text-decoration none
            color white
            font-weight bold
            &:hover
              color #e6b48e 
            &:active
              color rgba(255, 255, 255, 0.3)
    #slides
      position relative
      height 300px
      width 100%
      padding-bottom 350px
      list-style-type none
      color white
      font-size 72px
      font-weight bold
      line-height 72px
      text-align center
      .slide
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        opacity 0
        z-index 1
        box-sizing border-box
      .showing
        opacity 1
        z-index 2




    

    

