.page-header 
  width 100%
  height 640px
  background-image url(../img/slide-1.jpg)
  background-repeat no-repeat
  background-size 100%
  padding-top 60px
  @media (max-width: 1160px)
    height 420px
  @media (max-width: 768px)
    height 215px
    padding-top 20px
  .hamb
    display none 
    @media (max-width: 768px)
      display block
      position absolute
      width 30px
      height 20px
      right 30px
      top 20px
      cursor pointer
    .namb-line
      transition all 0.3s
      display block
      width 30px
      height 3px
      background-color white
      margin-bottom 6px
      cursor pointer
  .hamb-close span
    &:nth-child(1)
      transform translate(6px, -1px) rotate(45deg)
      transform-origin left top
    &:nth-child(2)
      transform scale(0)
    &:nth-child(3)
      transform translate(-3px, -20px) rotate(-45deg)
      transform-origin right bottom

  .main-header-navigation
    display flex
    justify-content space-between 
    align-content flex-start
    padding-left 10px
    padding-right 10px
    .header-logo
      margin-right 50px
      padding-top 20px
    .main-nav
      display flex
      justify-content space-between
      list-style none 
      text-transform uppercase
      padding-left 0
      padding-right 0
      padding-top 10px
      padding-bottom 10px
      border-top 1px solid rgba(255, 203, 120,0.3)
      border-bottom 1px solid rgba(255, 203, 120,0.3)
      @media (max-width: 768px)
        display none
        flex-direction column
        border none
        padding-top 0 
      li
        margin-right 30px
        &:last-child
          margin-right 0
        @media (max-width: 768px)
          margin-right 0
          font-size 12px
          line-height: 24px
        a
          text-decoration none
          color white
          font-weight bold
          &:hover
            color #e6b48e 
          &:active
            color rgba(255, 255, 255, 0.3)
  .menu-close
    display none
    color white
    font-size 24px
    font-weight bold
    position absolute
    top 10px
    right 30px
    cursor pointer
    @media (max-width: 768px)
      display none
  #slides
    position relative
    height auto
    width 100%
    list-style-type none
    color white
    font-size 72px
    font-weight bold
    line-height 72px
    text-align center
    @media (max-width: 1160px)
      font-size 36px
      line-height 36px
    @media (max-width: 768px)
      display none
    .slide
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0
      z-index 1
      box-sizing border-box
    .showing
      opacity 1
      z-index 2



        







    

    

