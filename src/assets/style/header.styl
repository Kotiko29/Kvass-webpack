.page-header 
  width 100%
  height 640px
  background-image url(../img/slide-1.jpg)
  background-repeat no-repeat
  background-size 100%
  padding-top 60px
  @media (max-width: 1160px)
    height 420px
  @media (max-width: 760px)
    height 215px
    padding-top 20px
  .menu-open 
    display none
    width 45px
    height 5px
    margin-left 20px
    background-color white
    box-shadow 0 14px 0 0 white, 0 28px 0 0 white
    cursor pointer
    @media (max-width: 760px)
      display inline-block
  .main-header-navigation
    display flex
    justify-content space-between 
    align-content flex-start
    padding-left 10px
    padding-right 10px
    @media (max-width: 760px)
      display none
    .header-logo
      margin-right 50px
      padding-top 20px
    .main-nav
      display flex
      justify-content space-between
      list-style none 
      text-transform uppercase
      padding-left 0
      padding-right 0
      padding-top 10px
      padding-bottom 10px
      border-top 1px solid rgba(255, 203, 120,0.3)
      border-bottom 1px solid rgba(255, 203, 120,0.3)
      @media (max-width: 760px)
        flex-direction column
        border none
        padding-top 0 
      li
        margin-right 30px
        &:last-child
          margin-right 0
        @media (max-width: 760px)
          margin-right 0
          font-size 12px
          line-height: 24px
        a
          text-decoration none
          color white
          font-weight bold
          &:hover
            color #e6b48e 
          &:active
            color rgba(255, 255, 255, 0.3)
  .menu-close
    display none
    color white
    font-size 24px
    font-weight bold
    position absolute
    top 10px
    right 30px
    cursor pointer
    @media (max-width: 760px)
      display none
  #slides
    position relative
    height auto
    width 100%
    list-style-type none
    color white
    font-size 72px
    font-weight bold
    line-height 72px
    text-align center
    @media (max-width: 1160px)
      font-size 36px
      line-height 36px
    @media (max-width: 760px)
      display none
    .slide
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      opacity 0
      z-index 1
      box-sizing border-box
    .showing
      opacity 1
      z-index 2



        







    

    

