.btn 
  display inline-block
  padding 16px 40px
  margin-right 20px
  font-size 16px
  font-weight bold
  text-align center
  text-transform uppercase
  vertical-align middle
  text-decoration none
  color #804325
  border 3px solid #804325
  @media (max-width: 1160px)
    display block
    margin-top 40px
    padding-top 25px
    padding-bottom 25px
  @media (max-width: 760px)
    width 100%
.btn-brown
  color white
  background-color #804325
.press-btn
  display inline-block
  padding 10px 20px
  margin-top 0
  margin-right 20px
  font-size 16px
  font-weight bold
  text-align center
  text-transform uppercase
  vertical-align middle
  text-decoration none
  color #aba6a6
  border 3px solid rgba(214,206,195,0.5)
  @media (max-width: 760px)
    width 100%
    margin-right 0
    margin-top 50px
