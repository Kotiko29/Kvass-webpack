  .new-and-price 
    margin-top 5px
    .container
      width 1160px
      max-width 100%
      margin 0 auto
      @media (max-width: 940px)
        padding-right 10px
        padding-left 10px
      h3 
        font-size 32px
        text-transform uppercase
      
      .new-items
        display flex
        .new-item
          padding-right 30px
          padding-left 30px
          border-left 1px solid rgba(0, 50, 50, 0.1) 
          border-right 1px solid rgba(0, 50, 50, 0.1)
          &:first-child
            border-right none
          .block-item
            display flex
            flex-direction row-reverse
            justify-content flex-end
            table, td
              width:40%
              font-size 16px
              font-weight bold
              text-transform uppercase

              border 1px solid rgba(0, 50, 50, 0.1)
              border-collapse collapse
              td
                padding 10px 20px
              caption
                font-size 14px
                font-weight normal
                text-transform none
                caption-side bottom
                text-align left
                color rgb(82, 75, 75);
        .btn 
          display inline-block
          padding 16px 40px
          margin-right 20px
          
          font-size 16px
          font-weight bold
          text-align center
          text-transform uppercase
          vertical-align middle
          text-decoration none
          color #804325
          border 3px solid #804325
        .btn-brown
          color white
          background-color #804325
