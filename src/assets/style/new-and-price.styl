  .features
    display flex
    margin-top 50px
    background-color #ffcb78
    .container
      width 1550px
      max-width 100%
      margin 0 auto
      @media (max-width: 940px)
        padding-right 10px
        padding-left 10px
      .features-list
        display flex
        list-style none
        .feature-item
          
          padding-right 60px
          padding-left 50px
          padding-top 80px
          padding-bottom 50px
          border-right 1px solid rgba(0, 50, 50, 0.1)
          &:last-child
            border none 
        .feature-cook
          background-image url(../img/pic1.svg)
          background-position 30px 10px
          background-size 80px 80px
          background-repeat no-repeat
        .feature-native
          background-image url(../img/pic2.svg)
          background-position 35px 0
          background-size 80px 80px
          background-repeat no-repeat
        .feature-quality
          background-image url(../img/pic3.svg)
          background-position 50px 0
          background-size 80px 80px
          background-repeat no-repeat


